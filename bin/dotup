#!/bin/bash

# TODO: https://github.com/charmbracelet/gum

if [[ -z $XDG_DATA_HOME ]]; then
  export XDG_DATA_HOME="$HOME/.local/share"
fi
if [[ -z $XDG_CONFIG_HOME ]]; then
  export XDG_CONFIG_HOME="$HOME/.config"
fi

source "${HOME}/.dotfiles/config/zsh/lib/helpers.zsh"

case "$(uname)" in
  Darwin)
    # -- intel mac:
    [ -f "/usr/local/bin/brew" ] && eval "$(/usr/local/bin/brew shellenv)"
    # -- M1 mac:
    [ -f "/opt/homebrew/bin/brew" ] && eval "$(/opt/homebrew/bin/brew shellenv)"
    ;;
  Linux)
    [ -d "/home/linuxbrew/.linuxbrew" ] && eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
    ;;
esac

set -euo pipefail

# -- set some useful vars for executable info:
__dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
__file="${__dir}/$(basename "${BASH_SOURCE[0]}")"
__base="$(basename "$__file" .sh)"
__root="$(cd "$(dirname "$__dir")" && pwd)"
# shellcheck disable=SC2034,SC2015
__invocation="$(printf %q "$__file")$( (($#)) && printf ' %q' "$@" || true)"
BACKUP_TIMESTAMP=$(date '+%Y%m%d_%H%M%S')

auth() {
  # gather sudo privileges:
  log_warn "needs sudo for things:"
  sudo -v || exit 1

  # Keep-alive: update existing `sudo` time stamp until setup has finished
  while true; do
    sudo -n true
    sleep 60
    kill -0 "$$" || exit
  done 2>/dev/null &
}

# update steps:
# - submodules
# - dotbot create
# - dotbot link
# - asdf / lib + plugins + default tool plugins + list caches (https://www.notion.so/Droplet-Ubuntu-Upgrade-0bacdb0df2344225b243362982d0c861)
# - homebrew / lib + outdated
# - nvim
# - paq
# - (macos) elixirls
# - (macos) kitty icon update
# - (linux/seth-dev) remote-dev update
# - (linux/seth-dev) dev update

update() {
  log "update git submodules (recursively).." &&
    git submodule update --init --recursive

  log "create missing folders and symlinks.." &&
    ./install --only create link

  if [[ "$(uname)" == "Darwin" ]]; then
    log "update xcode cli tools.."
    ./bin/xcode-install -f
  fi

  log "homebrew install.." &&
    ./bin/brew-install -u

  # log "asdf install.." &&
  #   ./bin/asdf-install
  #
  log "(asdf) install perl packages.." &&
    ~/.dotfiles/asdf/perl.sh

  log "(asdf) install python packages.." &&
    ~/.dotfiles/asdf/python.sh

  log "neovim install.." && ./bin/nvim-install

  if [[ "$(uname)" == "Darwin" ]]; then
    log "elixir-ls install.." &&
      ./bin/elixirls-install master

    log "lexical install.." &&
      ./bin/lexical-install main
  fi

  [[ -e /etc/zshrc ]] &&
    log "backup system default /etc/zshrc.." &&
    sudo mv /etc/zshrc "/etc/zshrc.backup-before-dotfiles-${BACKUP_TIMESTAMP}" &&
    log_ok "Backed up system default /etc/zshrc to /etc/zshrc.backup-before-dotfiles-${BACKUP_TIMESTAMP}.."

  log "github auth login.." &&
    ./bin/gh-login
}

yay() {
  log_ok "dotfiles update complete!"
  command cat <<EOF

â–‘
â–‘ $(dotsay "ðŸ‘ @b@yellow[[donesies!]]")
â–‘ $(dotsay "@b@green[[ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››]]")
EOF

  if [[ "$(hostname)" == "seth-dev" ]]; then
    command cat <<EOF
â–‘
â–‘  $(dotsay "âœ¸ since you're on $(hostname), you might want to:")
â–‘
â–‘   $(dotsay "â€¢ run \`@b@blue[[dev update]]\`")
â–‘
EOF
  else
    command cat <<EOF
â–‘
â–‘  $(dotsay "â€¢ nothing more to do.")
â–‘

EOF
  fi
}

oops() {
  log_error "dotfiles update failed!"
  command cat <<EOF

â–‘
â–‘ $(dotsay "ðŸ’£ðŸ’¥ @b@yellow[[oh snap, something blew up!1!]]")
â–‘ $(dotsay "@b@red[[ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››ï››]]")
â–‘
â–‘  $(dotsay "âœ¸ be sure to check back through the script's output above ðŸ‘†")
â–‘
â–‘   $(dotsay "â€¢ there's gotta be something useful back there..")
â–‘

EOF
}

# change to $DOTS dir
pushd "$DOTS" >/dev/null

# show banner with useful info
"$DOTS/bin/dotbanner"

# require sudo and then update
(auth && update) && yay || oops

# back to previous dir
popd >/dev/null
