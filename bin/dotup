# echo "Linking tmux configuration files..."
# rm -rf $HOMEDIR/.tmux.conf
# ln -s  $DOTS/tmux/tmux.conf $HOMEDIR/.tmux.conf

# # Link karabiner configuration
# echo "Linking Karabiner configuration files..."
