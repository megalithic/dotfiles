#!/usr/bin/env zsh

external=$(dig +short myip.opendns.com @resolver1.opendns.com)
# external=$(wget -q -O - "http://myexternalip.com/raw")
vpn0=$(ifconfig utun0 | ag 'inet ' | awk '{print "["$2"] "}')
vpn3=$(ifconfig utun3 | ag 'inet ' | awk '{print "["$2"] "}')
en0=$(ifconfig en0 | ag 'inet ' | awk '{print $2}')
en1=$(ifconfig en1 | ag 'inet ' | awk '{print $2}')
en7=$(ifconfig en7 | ag 'inet ' | awk '{print $2}')
en8=$(ifconfig en8 | ag 'inet ' | awk '{print $2}')

echo "#[fg=brightblue]礪$external #[fg=colour136]$vpn0$vpn3#[fg=white] #[fg=yellow]$en0$en1$en7$en8"
