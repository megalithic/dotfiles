#!/bin/zsh

echo ':: symlinking $DOTS/**/*.symlink files to $HOME/.<file>...'

for found in **/*.symlink; do
  source="$DOTS/$found"
  dest="$HOME/.`basename \"${found%.*}\"`"

  if [ -f $dest ] || [ -d $dest ]; then
    rm -rf $dest
    echo "Removed existing symlink: $dest"
  fi

  ln -sf $source $dest
  echo "Symlinked $source to $dest"
done
