#!/bin/bash

# REF: https://github.com/junegunn/fzf/discussions/2760#discussioncomment-4239679

# https://github.com/junegunn/fzf/issues/2481#issuecomment-839591602
tail_app="tail"
if [[ "$(uname)" == "Darwin" ]]; then
  tail_app=gtail
fi

if [[ -f "$INFILE" ]]; then
  "$tail_app" -f "$INFILE" | fzf "$@" >"$OUTPIPE"
else
  fzf "$@" >"$OUTPIPE"
fi
