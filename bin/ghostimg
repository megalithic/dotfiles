#!/bin/bash
transmit_png() {
	data=$(base64 "$1")
	data="${data//[[:space:]]/}"
	builtin local pos=0
	builtin local chunk_size=4096
	while [ $pos -lt ${#data} ]; do
		builtin printf "\e_G"
		[ $pos = "0" ] && printf "i=1,a=t,f=100,"
		builtin local chunk="${data:$pos:$chunk_size}"
		pos=$(($pos + $chunk_size))
		[ $pos -lt ${#data} ] && builtin printf "q=1,m=1" || printf "q=1,m=0"
		[ ${#chunk} -gt 0 ] && builtin printf ";%s" "${chunk}"
		builtin printf "\e\\"
	done

	printf "\x1b_Ga=p,i=1,q=1;\x1b\\"
	printf "\r\n"
	printf "\x1b_Ga=p,r=5,c=11,y=30,i=1,q=1;\x1b\\"
}

transmit_png "$1"
