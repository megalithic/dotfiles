#!/usr/bin/env bash

#
# What in tarnation?
#
# CLI tool to control slack status and presence
#
# Requires:
# - ENV vars setup for your slack API tokens (KEEP THEM SAFE! DO NOT commit your tokens to github)
#   * you can find them here: https://api.slack.com/custom-integrations/legacy-tokens
# - `spinner` from my dotfiles' `bin` folder
#


base_command="$(basename "$0")"

help() {
  printf -- "Usage: "$base_command" <subcommand> <option>\n"
  printf -- "\n"
  printf -- "Channels:\n"
  printf -- "    enbala\n"
  printf -- "    cit\n"
  printf -- "    magiccitytech\n"
  printf -- "\n"
  printf -- "Subcommands:\n"
  printf -- "    away               Set presence away, and profile accordingly\n"
  printf -- "    back               Set presence auto, and profile accordingly\n"
  printf -- "\n"
}

function post_to_api () {
  # $1=token
  # $2=options
  # $3=endpoint

  # hide curl output if we want, and send it to our spinner
  # 2>/dev/null 1>&2 curl -s -S --data "" "https://slack.com/api/$3?token=$1&$2" | grep '"ok":true' | spinner
  2>/dev/null 1>&2 curl -s -S --data "" "https://slack.com/api/$3?token=$1&$2" | spinner
}

function post_slack_status () {
  # $1=token
  # $2=options
  # $3=endpoint
  post_to_api $1 $2 "users.profile.set"
}

function post_presence () {
  # $1=token
  # $2=options
  # $3=endpoint
  post_to_api $1 $2 "users.setPresence"
}

function away () {
  profile="profile=%7B%22status_text%22:%22..gone..%22,%22status_emoji%22:%22%22%7D"
  presence="presence=away"
  post_all_presence $presence
  post_all_slack_status $profile
}

function back () {
  profile="profile=%7B%22status_text%22:%22%22,%22status_emoji%22:%22%22%7D"
  presence="presence=auto"
  post_all_presence $presence
  post_all_slack_status $profile
}

function post_all_presence () {
  post_presence $ENBALA_TOKEN $1
  post_presence $CIT_TOKEN $1
  post_presence $MAGICCITYTECH_TOKEN $1
}

function post_all_slack_status () {
  post_slack_status $ENBALA_TOKEN $1
  post_slack_status $CIT_TOKEN $1
  post_slack_status $MAGICCITYTECH_TOKEN $1
}

subcommand=$1
options=$2

case $subcommand in
  '')
    help ;;
  '-h' | '--help')
    help ;;
  enbala)
    slack_token=$ENBALA_TOKEN
    profile="profile=%7B%22status_text%22:%22Working%22,%22status_emoji%22:%22:briefcase:%22%7D"
    presence="presence=$options"
    post_presence $slack_token $presence
    # post_slack_status $slack_token $profile
    ;;
  cit)
    slack_token=$CIT_TOKEN
    profile="profile=%7B%22status_text%22:%22Working%22,%22status_emoji%22:%22:briefcase:%22%7D"
    presence="presence=$options"
    post_presence $slack_token $presence
    # post_slack_status $slack_token $profile
    ;;
  magiccitytech)
    slack_token=$MAGICCITYTECH_TOKEN
    profile="profile=%7B%22status_text%22:%22Working%22,%22status_emoji%22:%22:briefcase:%22%7D"
    presence="presence=$options"
    post_presence $slack_token $presence
    # post_slack_status $slack_token $profile
    ;;
  *)
    shift
    ${subcommand} $@
    ;;
esac
