#!/usr/bin/env bash

#
# What in tarnation?
#
# CLI tool to control slack status and presence
#
# Requires:
# - ENV vars setup for your slack API tokens (KEEP THEM SAFE! DO NOT commit your tokens to github)
#   * you can find them here: https://api.slack.com/custom-integrations/legacy-tokens
# - `spinner` from my dotfiles' `bin` folder
#


base_command="$(basename "$0")"

help() {
  printf -- "Usage: "$base_command" <subcommand> <options>\n"
  printf -- "\n"
  printf -- "Subcommands:\n"
  printf -- "    away               Set presence to away, and profile for being gone\n"
  printf -- "    lunch              Set presence to away, and profile for lunch\n"
  printf -- "    pair               Set presence to away, and profile for pairing\n"
  printf -- "    back               Set presence to auto, and profile accordingly\n"
  printf -- "\n"
}

function post_to_api () {
  # $1=token
  # $2=options
  # $3=endpoint

  # hide curl output if we want, and send it to our spinner
  # curl -s --data "" "https://slack.com/api/$3?token=$1&$2" | \
  #   grep -q '"ok":true,' && \
  #       echo "${green}Status updated ok${reset}" || \
  #       echo "${red}There was a problem updating the status${reset}" | \
  #   spinner
  2>/dev/null 1>&2 curl -s -S --data "" "https://slack.com/api/$3?token=$1&$2" | spinner
}

function post_profile () {
  # $1=token
  # $2=options
  post_to_api $1 $2 "users.profile.set"
}

function post_presence () {
  # $1=token
  # $2=options
  post_to_api $1 $2 "users.setPresence"
}

function post_all_presence () {
  post_presence $ENBALA_TOKEN $1
  post_presence $CIT_TOKEN $1
  post_presence $MAGICCITYTECH_TOKEN $1
}

function post_all_profile () {
  post_profile $ENBALA_TOKEN $1
  post_profile $CIT_TOKEN $1
  post_profile $MAGICCITYTECH_TOKEN $1
}

function away () {
  presence="presence=away"
  post_all_presence $presence
  profile="profile=%7B%22status_text%22:%22..adios..%22,%22status_emoji%22:%22:wave:%22%7D"
  post_all_profile $profile
}

function lunch () {
  presence="presence=away"
  post_all_presence $presence
  profile="profile=%7B%22status_text%22:%22..lunch..%22,%22status_emoji%22:%22:taco:%22%7D"
  post_all_profile $profile
}

function pair () {
  presence="presence=away"
  post_all_presence $presence
  profile="profile=%7B%22status_text%22:%22..pairing..%22,%22status_emoji%22:%22:pear:%22%7D"
  post_all_profile $profile
}

function back () {
  presence="presence=auto"
  post_all_presence $presence
  profile="profile=%7B%22status_text%22:%22%22,%22status_emoji%22:%22%22%7D"
  post_all_profile $profile
}

subcommand=$1
options=$2

case $subcommand in
  '' | '-h' | '--help')
    help ;;
  *)
    shift
    ${subcommand} $@
    ;;
esac
