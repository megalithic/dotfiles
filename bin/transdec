#!/bin/zsh

# https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eueo pipefail

cd "$HOME/.dotfiles"

echo "decrypting dotfiles..."
echo -n "transcrypt cipher (aes-256-cbc): "
read -r cipher
echo -n "transcrypt password: "
read -sr password
echo

transcrypt -c "${cipher:-aes-256-cbc}" -p "$password"
