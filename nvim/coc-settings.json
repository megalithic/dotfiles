{
  // could be 'always' 'trigger' => for specified trigger characters only 'none'
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.autoTrigger": "always",
  // only used when autoTrigger is always
  "coc.preferences.triggerAfterInsertEnter": false,
  "coc.preferences.minTriggerInputLength": 2,
  "coc.preferences.acceptSuggestionOnCommitCharacter": false,
  "coc.preferences.preferCompleteThanJumpPlaceholder": true,
  "coc.preferences.triggerSignatureHelp": true,
  "coc.preferences.snippets.enable": true,
  "coc.preferences.snippetIndicator": "",
  "coc.preferences.colorSupport": false,
  "coc.preferences.hoverTarget": "preview",
  "coc.preferences.noselect": false,
  // executable path for https://facebook.github.io/watchman/, detected from $PATH by default
  // "coc.preferences.watchmanPath": "",
   // enable formatOnType feature
  "coc.preferences.formatOnType": true,
  // command used for jump to other buffer
  "coc.preferences.jumpCommand": "vsplit",

  // diagnostics
  "coc.preferences.diagnostic.enable": true,
  "coc.preferences.diagnostic.displayByAle": true,
  "coc.preferences.diagnostic.locationlist": false,
  "coc.preferences.diagnostic.signOffset": 1000,
  "coc.preferences.diagnostic.highlightOffset": 1000,
  "coc.preferences.diagnostic.errorSign": "✖-",
  "coc.preferences.diagnostic.warningSign": "⬥-",
  "coc.preferences.diagnostic.infoSign": ">>",
  "coc.preferences.diagnostic.hintSign": ">>",
  "coc.preferences.codeLens.enable": true,
  "coc.preferences.codeLens.separator": "❯❯ ",

  // prettier
  "prettier.eslintIntegration": true,
  "prettier.tslintIntegration": true,
  "prettier.stylelintIntegration": true,

  // eslint
  "eslint.filetypes": ["javascript", "javascript.jsx", "javascriptreact"],
  "eslint.autoFix": true,
  "eslint.autoFixOnSave": true,

  // tslint
  "tslint.autoFixOnSave": true,

  // yaml
  "yaml.schemas": {
    "http://json.schemastore.org/composer": "/*"
  },

  // sources
  "coc.source.emoji.enable": true,
  "coc.source.emoji.filetypes": ["markdown", "gitcommit"],
  /* "coc.source.emoji.triggerCharacters": [":"], */
  "coc.source.ultisnips.enable": true,
  "coc.source.ultisnips.shortcut": "",
  "coc.source.ultisnips.priority": 1,
  "coc.source.around.enable": true,
  "coc.source.around.shortcut": "A",
  "coc.source.around.priority": 2,
  "coc.source.buffer.enable": true,
  "coc.source.buffer.shortcut": "B",
  "coc.source.buffer.priority": 3,
  "coc.source.buffer.ignoreGitignore": true,
  "coc.source.file.enable": true,
  "coc.source.file.shortcut": "F",
  "coc.source.file.priority": 4,
  "coc.source.file.triggerCharacters": ["/"],
  "coc.source.file.trimSameExts": [".ts", ".js"],
  "coc.source.file.ignoreHidden": true,
  "coc.source.file.ignorePatterns": [],
  "coc.source.word.enable": false,
  /* "coc.source.omni.filetypes": ["elixir", "eelixir", "elm"], */

  // languageserver
  "languageserver": {
    "sh": {
      "command": "bash-language-server",
      "args": ["start", "--stdio"],
      "filetypes": ["sh"],
      "cwd": "./",
      "initializationOptions": {},
      "settings": {}
    },
    "elixir": {
      "command": ".elixir_ls/rel/language_server.sh",
      "args": [],
      "filetypes": ["elixir", "eelixir"],
      "cwd": "./",
      "initializationOptions": {
        "elixirLS": {
          "dialyzerEnabled": true
        }
      },
      "settings": {}
    },
    "dart": {
      "command": "dart_language_server",
      "args": [],
      "filetypes": ["dart"],
      "cwd": "./lib",
      "initializationOptions": {},
      "settings": {}
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "python": {
      "command": "pyls",
      "filetypes": ["python", "pythonx"],
      "args": []
    },
    "golang": {
      "command": "go-langserver",
      "filetypes": ["go"],
      // disable output channel to hide server errors
      "revealOutputChannelOn": "never",
      "initializationOptions": {
        "gocodeCompletionEnabled": true,
        "diagnosticsEnabled": true,
        "lintTool": "golint"
      }
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    }
  },
}

// vim:ft=jsonc
