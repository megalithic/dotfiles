// really good example of rules: https://github.com/sainnhe/dotfiles/blob/master/.config/nvim/coc-settings.json
//
{
  // could be 'always' 'trigger' => for specified trigger characters only 'none'
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.triggerSignatureHelp": false,
  "coc.preferences.snippets.enable": true,
  "coc.preferences.colorSupport": false,
  "coc.preferences.hoverTarget": "echo", // "preview"
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSaveFiletypes": [],
  "coc.preferences.jumpCommand": "vsplit",
  "coc.preferences.previewAutoClose": true,

  "suggest.autoTrigger": "always",
  "suggest.triggerAfterInsertEnter": false,
  "suggest.minTriggerInputLength": 3,
  "suggest.acceptSuggestionOnCommitCharacter": false,
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "suggest.numberSelect": false,
  "suggest.enablePreview":true,
  "suggest.snippetIndicator": "",
  /* "snippets.ultisnips.directories": ["UltiSnips", "snips"], */
  /* "snippets.ultisnips.pythonVersion": 3, */
  /* "coc.preferences.snippetIndicator": "\uf5d4", */
  "suggest.noselect": false,
  "suggest.timeout": 5000,

  "diagnostic.enable": true,
  "diagnostic.refreshOnInsertMode": false,
  "diagnostic.displayByAle": false,
  "diagnostic.locationlist": false,
  "diagnostic.signOffset": 1000,
  "diagnostic.highlightOffset": 1000,
  "diagnostic.errorSign": "✖-",
  "diagnostic.warningSign": "⬥-",
  "diagnostic.infoSign": "‣",
  "diagnostic.hintSign": "‣",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextLines": 3,
  "codeLens.enable": true,
  "codeLens.separator": "❯ ",
  "suggest.echodocSupport": false,
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,

  // prettier
  "prettier.eslintIntegration": true,
  "prettier.tslintIntegration": true,
  "prettier.stylelintIntegration": true,

  // eslint
  "eslint.filetypes": ["javascript", "javascript.jsx", "javascriptreact"],
  "eslint.autoFix": true,
  "eslint.autoFixOnSave": true,

  // tslint
  "tslint.autoFixOnSave": true,

  // yaml
  "yaml.schemas": {
    "http://json.schemastore.org/composer": "/*"
  },

  // sources
  "coc.source.emoji.enable": false,
  /* "coc.source.emoji.filetypes": ["markdown", "gitcommit"], */
  /* "coc.source.emoji.triggerCharacters": [":"], */
  "coc.source.ultisnips.enable": true,
  "coc.source.ultisnips.shortcut": "",
  "coc.source.ultisnips.priority": 10,
  "coc.source.tag.enable": true,
  "coc.source.tag.priority": 9,
  "coc.source.around.enable": true,
  "coc.source.around.shortcut": "A",
  "coc.source.around.priority": 8,
  "coc.source.file.enable": true,
  "coc.source.file.shortcut": "F",
  "coc.source.file.priority": 7,
  "coc.source.file.triggerCharacters": ["/"],
  "coc.source.file.trimSameExts": [".ts", ".js"],
  "coc.source.file.ignoreHidden": true,
  "coc.source.file.ignorePatterns": [],
  "coc.source.buffer.enable": true,
  "coc.source.buffer.shortcut": "B",
  "coc.source.buffer.priority": 6,
  "coc.source.buffer.ignoreGitignore": true,
  "coc.source.word.enable": false,
  /* "coc.source.omni.filetypes": ["elixir", "eelixir", "elm"], */

  // languageserver
  "languageserver": {
    "sh": {
      "command": "bash-language-server",
      "args": ["start", "--stdio"],
      "filetypes": ["sh", "bash", "zsh", "shell"],
      "cwd": "./",
      "initializationOptions": {},
      "settings": {}
    },
    "elixir": {
      "command": "./.elixir_ls/rel/language_server.sh",
      "args": [],
      "filetypes": ["elixir", "eelixir", "ex", "exs"],
      "cwd": "./",
      "initializationOptions": {
        "elixirLS": {
          "dialyzerEnabled": true
        }
      },
      "settings": {}
    },
    /* "dart": { */
    /*   "command": "dart_language_server", */
    /*   "args": [], */
    /*   "filetypes": ["dart"], */
    /*   "cwd": "./lib", */
    /*   "initializationOptions": {}, */
    /*   "settings": {} */
    /* }, */
    /* "dockerfile": { */
    /*   "command": "docker-langserver", */
    /*   "filetypes": ["dockerfile"], */
    /*   "args": ["--stdio"] */
    /* }, */
    "python": {
      "command": "pyls",
      "filetypes": ["python", "pythonx", "py"],
      "args": []
    },
    /* "go": { */
    /*   "command": "go-langserver", */
    /*   "filetypes": ["go"], */
    /*   // disable output channel to hide server errors */
    /*   "revealOutputChannelOn": "never", */
    /*   "initializationOptions": { */
    /*     "gocodeCompletionEnabled": true, */
    /*     "diagnosticsEnabled": true, */
    /*     "lintTool": "golint" */
    /*   } */
    /* }, */
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    }
  },
}

// vim:ft=jsonc
